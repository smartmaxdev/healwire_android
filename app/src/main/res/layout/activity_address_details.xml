<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebedef"
    android:id="@+id/relativeLayoutMain"
    tools:context="com.webandcrafts.healwire.AddressDetailsActivity">

    <RelativeLayout
        android:id="@id/relativeLayoutTitle"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#44BFB9"
        android:paddingLeft="20dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Add Details"
            android:textColor="#ffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayoutTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textViewFirstName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="First Name"
            android:textSize="13sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:id="@+id/relativeLayoutFirstName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textViewFirstName"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/round_edittext" >

            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/round_edittext"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>


        <TextView
            android:id="@+id/textViewLastName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:text="Last Name"
            android:textSize="13sp"
            android:layout_below="@+id/relativeLayoutFirstName"
            android:layout_alignLeft="@+id/relativeLayoutFirstName"
            android:layout_alignStart="@+id/relativeLayoutFirstName" />

        <RelativeLayout
            android:id="@+id/relativeLayoutLastName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/textViewLastName"
            android:background="@drawable/round_edittext"
            android:gravity="center_vertical"
            android:layout_alignRight="@+id/relativeLayoutFirstName"
            android:layout_alignEnd="@+id/relativeLayoutFirstName"
            android:layout_alignLeft="@+id/textViewLastName"
            android:layout_alignStart="@+id/textViewLastName">

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/round_edittext"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:paddingTop="5dp"
            android:text="Address"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_below="@+id/relativeLayoutLastName"
            android:layout_alignLeft="@+id/relativeLayoutLastName"
            android:layout_alignStart="@+id/relativeLayoutLastName" />


        <RelativeLayout
            android:id="@+id/relativeLayoutAddress"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_below="@+id/textViewAddress"


            android:background="@drawable/round_edittext"
            android:gravity="center_vertical"
            android:layout_alignRight="@+id/relativeLayoutLastName"
            android:layout_alignEnd="@+id/relativeLayoutLastName"
            android:layout_alignLeft="@+id/textViewAddress"
            android:layout_alignStart="@+id/textViewAddress">

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_edittext"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewPincode"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Pin code"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_below="@+id/relativeLayoutAddress"
            android:layout_alignLeft="@+id/relativeLayoutAddress"
            android:layout_alignStart="@+id/relativeLayoutAddress" />


        <RelativeLayout
            android:id="@+id/relativeLayoutPincode"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/textViewPincode"
            android:background="@drawable/round_edittext"
            android:gravity="center_vertical"
            android:layout_alignRight="@+id/relativeLayoutLastName"
            android:layout_alignEnd="@+id/relativeLayoutLastName"
            android:layout_alignLeft="@+id/textViewAddress"
            android:layout_alignStart="@+id/textViewAddress">


            <EditText
                android:id="@+id/editTextPincode"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/round_edittext"
                android:ems="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp" />



        </RelativeLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:text="Update"
            android:id="@+id/buttonUpdate"
            android:textAllCaps="true"
            android:backgroundTint="@color/buttonBackColor"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/relativeLayoutPincode"
            android:layout_alignRight="@+id/relativeLayoutPincode"
            android:layout_alignEnd="@+id/relativeLayoutPincode"
            android:layout_alignLeft="@+id/relativeLayoutPincode"
            android:layout_alignStart="@+id/relativeLayoutPincode" />




    </RelativeLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebedef"
    tools:context="com.webandcrafts.medisend.MedicineInformationActivity">

    <RelativeLayout
        android:id="@id/relativeLayoutTitle"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#44BFB9"
        android:paddingLeft="15dp" >

        <TextView
            android:id="@+id/textViewKnowMedicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Know your medicine"
            android:textColor="#ffff"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/relativeLayoutSubstitute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewKnowMedicine"
            android:layout_toRightOf="@+id/textViewKnowMedicine" >

            <ImageView
                android:id="@+id/imageViewSubstitute"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_toLeftOf="@+id/textView4"
                android:src="@drawable/sub" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewSubstitute"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="Substitute"
                android:textColor="#ffff"
                />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayoutTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">


        <RelativeLayout
            android:id="@+id/relativeLayoutInformation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="15dp"
            android:layout_above="@+id/relativeLayoutAddToCart">

            <RelativeLayout
                android:id="@+id/relativeLayoutBox"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffff"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/textViewInformation"
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Information"
                    android:textSize="17sp"
                    />

                <View
                    android:id="@+id/viewSeperatorInformation"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/textViewInformation"
                    android:layout_below="@+id/textViewInformation"
                    android:background="#E6E6E6" />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignLeft="@+id/viewSeperatorInformation"
                    android:layout_below="@+id/viewSeperatorInformation"
                    android:layout_marginTop="19dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Name           : "
                    android:textColor="#6E6E6E"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignLeft="@+id/textViewName"
                    android:layout_alignRight="@+id/textViewName"
                    android:layout_below="@+id/textViewName"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Price            : "
                    android:textColor="#6E6E6E"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/TypefaceTextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignLeft="@+id/textViewPrice"
                    android:layout_alignRight="@+id/textViewName"
                    android:layout_below="@+id/textViewPrice"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Expiry Date : "
                    android:textColor="#6E6E6E"
                    android:textSize="15sp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/textViewGroupMedicineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textViewName"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textViewName"
                    android:layout_toRightOf="@+id/textViewName"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="Dolopar 650 Mg IP"
                    android:textColor="#6E6E6E"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/textViewMedicinePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textViewPrice"
                    android:layout_alignRight="@+id/textViewGroupMedicineName"
                    android:layout_alignTop="@+id/textViewPrice"
                    android:layout_toRightOf="@+id/textViewPrice"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="16.08/-"
                    android:textColor="#6E6E6E"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/TypefaceTextView04"
                    android:layout_alignLeft="@+id/textViewMedicinePrice"
                    android:layout_alignRight="@+id/textViewGroupMedicineName"
                    android:layout_alignTop="@+id/TypefaceTextView04"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="10-Mar-2017"
                    android:textColor="#6E6E6E"
                    android:textSize="16sp"
                    android:visibility="gone" />

                 <TextView
                    android:id="@+id/textViewGroupQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_alignLeft="@+id/TypefaceTextView04"
                    android:layout_below="@+id/TypefaceTextView04"
                    android:layout_toLeftOf="@+id/tv_exp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Quantity      : "
                    android:textColor="#6E6E6E"
                    android:textSize="15sp"
                    />

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textViewGroupQuantity"
                    android:layout_alignLeft="@+id/tv_exp"
                    android:layout_alignRight="@+id/tv_exp"
                    android:layout_alignTop="@+id/textViewGroupQuantity"
                    android:paddingLeft="15dp"
                    android:paddingRight="40dp" >

                    <RelativeLayout
                        android:id="@+id/relativeLayoutQuantityControl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/qty_picker_bg"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <RelativeLayout
                            android:id="@+id/relativeLayoutUpQuantity"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignBottom="@+id/relativeLayoutDownQuantity"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/relativeLayoutDownQuantity"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp" >

                            <ImageView
                                android:id="@+id/ImageView01"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/spinner_arrow_up" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/viewUpArrow"
                            android:layout_width="1dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/relativeLayoutUpQuantity"
                            android:background="#BDBDBD" />

                        <EditText
                            android:id="@+id/editTextQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/relativeLayoutDownQuantity"
                            android:layout_alignTop="@+id/relativeLayoutDownQuantity"
                            android:layout_toLeftOf="@+id/viewUpArrow"
                            android:layout_toRightOf="@+id/relativeLayoutDownQuantity"
                            android:background="#F2F2F2"
                            android:gravity="center"
                            android:maxLength="3"
                            android:numeric="integer"
                            android:text="1"
                            android:windowSoftInputMode="stateHidden" >

                            <requestFocus />
                        </EditText>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutDownQuantity"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp" >

                            <ImageView
                                android:id="@+id/imageViewDown"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/spinner_arrow" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/viewDownArrow"
                            android:layout_width="1dp"
                            android:layout_height="10dp"
                            android:layout_alignRight="@+id/relativeLayoutDownQuantity"
                            android:layout_centerVertical="true"
                            android:background="#BDBDBD" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewCompositionDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewComposition"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/relativeLayout1"
                    android:layout_below="@+id/textViewComposition"
                    android:text="Aspirin"
                    android:textColor="#6E6E6E"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewComposition"
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_alignLeft="@+id/textViewGroupQuantity"
                    android:layout_below="@+id/textViewGroupQuantity"
                    android:gravity="center_vertical"
                    android:text="Composition    :"
                    android:textColor="#6E6E6E"
                    android:textSize="15sp" />
            </RelativeLayout>





        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayoutAddToCart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_buy"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textViewAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:text="ADD TO CART"
                android:textColor="#ffffff"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/imageViewAddToCart"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textViewAddToCart"
                android:src="@drawable/add_to_cart" />


        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>
